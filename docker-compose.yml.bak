version: '3.8'

services:
  api:
    build:
      context: .
      dockerfile: apps/api/Dockerfile
    ports:
      - "3000:3000"
    volumes:
      - ./apps/api:/app/apps/api
      - /app/apps/api/node_modules
    environment:
      - PORT=3000
      - DATABASE_URL=${DATABASE_URL}
    command: npm run dev
    networks:
      - brooker-network

networks:
  brooker-network:
    driver: bridge
